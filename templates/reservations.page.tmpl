{{template "base" .}}

{{define "content"}}
<div class="container">
	<div class="row">
		<div class="col">
			<h1 class="col text-center">Make Reservation</h1>
            <p>&nbsp;</p>
			<form method="POST" action="" class="row g-3 needs-validation" novalidate>
                <div class="col-md-6">
					<!-- <label for="first_name">First Name:</label> -->
					<input type="text" name="first_name" class="form-control" id="first_name" required autocomplete="off" placeholder="First Name:">
                </div>
				<div class="col-md-6">
					<!-- <label for="last_name">Last Name:</label> -->
					<input type="text" name="last_name" class="form-control" id="last_name" required autocomplete="off" placeholder="Last Name:">
				</div>	
				<div class="col-md-6">
					<!-- <label for="email">Email:</label> -->
					<input type="email" name="email" class="form-control" id="email" required autocomplete="off" placeholder="Email:">
				</div>	
				<div class="col-md-6">
					<!-- <label for="phone">Phone Number:</label> -->
					<input type="text" name="phone" class="form-control" id="phone" required autocomplete="off" placeholder="Phone Number">
				</div>	
			</form>
			<p>&nbsp;</p>
           <div class="row">
            <div class="col text-center">
			<input type="submit" class="col-md-2 btn btn-primary" value="Make Reservation">
        </div>
           </div>

		</div>
	</div>
		
	</div>
</div>

{{end}}

